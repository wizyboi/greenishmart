{
  "version": 2,
  "builds": [
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/wsgi.py"
    }
  ],
  "env": {
    "DEBUG": "False",
    "ALLOWED_HOSTS": "greenishmart-backend.vercel.app,greenishmart.vercel.app",
    "SECRET_KEY": "your-secret-key-here"
  }
}
